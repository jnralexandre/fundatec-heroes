<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/arnold_schwarzenegger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_profile_activity"
        app:layout_constraintBottom_toBottomOf="@+id/image_view"
        app:layout_constraintTop_toTopOf="@+id/image_view" />

    <TextView
        android:id="@+id/text_view_nome_personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/background_button"
        android:text="Nome"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/image_view"
        app:layout_constraintStart_toStartOf="@+id/image_view"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <TextView
        android:id="@+id/text_view_descricao_personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_nome_personagem"
        app:layout_constraintStart_toStartOf="@+id/text_view_nome_personagem"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_personagem" />

    <TextView
        android:id="@+id/text_view_idade_personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idade"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_descricao_personagem"
        app:layout_constraintStart_toStartOf="@+id/text_view_descricao_personagem"
        app:layout_constraintTop_toBottomOf="@+id/text_view_descricao_personagem" />

    <TextView
        android:id="@+id/text_nascimento_personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_idade_personagem"
        app:layout_constraintStart_toStartOf="@+id/text_view_idade_personagem"
        app:layout_constraintTop_toBottomOf="@+id/text_view_idade_personagem" />

</androidx.constraintlayout.widget.ConstraintLayout>