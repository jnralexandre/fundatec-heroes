<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cli_cardview"
        android:layout_width="168dp"
        android:layout_height="236dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cli_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_button"
            android:scaleType="centerCrop"
            android:src="@color/background_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_nome_heroi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cli_cardview"
        app:layout_constraintStart_toStartOf="@+id/cli_cardview"
        app:layout_constraintTop_toBottomOf="@+id/cli_cardview"
        tools:text="Nome Heroi" />

</androidx.constraintlayout.widget.ConstraintLayout>