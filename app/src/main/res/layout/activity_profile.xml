<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile_activity">

    <ImageView
        android:id="@+id/logo_fundatec_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_fundatec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <View
        android:id="@+id/view_criar_usuario"
        style="@style/container_components_activity_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <EditText
        android:id="@+id/edit_text_name_activity_profile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="150dp"
        android:drawableRight="@drawable/ic_person"
        android:hint="Digite o nome..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/view_criar_usuario"
        app:layout_constraintEnd_toEndOf="@+id/view_criar_usuario"
        app:layout_constraintStart_toStartOf="@+id/view_criar_usuario"
        app:layout_constraintTop_toTopOf="@+id/view_criar_usuario"></EditText>

    <EditText
        android:id="@+id/edit_text_email_activity_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="Digite o e-mail..."
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_name_activity_profile"
        app:layout_constraintStart_toStartOf="@+id/edit_text_name_activity_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name_activity_profile"></EditText>

    <EditText
        android:id="@+id/edit_text_password_activity_profile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_eye"
        android:hint="Digite a senha..."
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_activity_login"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_activity_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email_activity_login"></EditText>

    <Button
        android:id="@+id/btn_criar_usuario"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/background_button"
        android:text="Criar"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/view_criar_usuario"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_password_activity_profile"
        app:layout_constraintStart_toStartOf="@+id/edit_text_password_activity_profile"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_password_activity_profile"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>